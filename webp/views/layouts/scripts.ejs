function saveReview(){
    for(i=5; i>0; i--){
        if(document.getElementById('star'+i).classList.contains('fas')) break;
    }

    var lec_num = document.getElementById('title').innerText;
    var review = document.getElementById('review').value;
    console.log(lec_num, i, review);
    if(i && review.length){
        location.href = '/comment?&lec_num='+lec_num+'&comment='+review+'&star='+i;
    }else if(!review.length){
        alert('수강평을 입력해주세요');
    }else{
        alert('별점은 1개 이상부터 등록가능합니다.');
    }
}

function sendStar(id){
    var category = document.getElementById(id);

    i=Number(id[4])
    
    for(var k=1; k<=i; k++){
        document.getElementById('star'+k).classList.add('fas');
        document.getElementById('star'+k).classList.remove('far');
        document.getElementById('star'+k).style.color = 'white';
    }
    for(var m=i+1; m<=5; m++){
        document.getElementById('star'+m).classList.remove('fas');
        document.getElementById('star'+m).classList.add('far');
        document.getElementById('star'+m).style.color = 'white';
    }
}

function openCategory(id){
    var category = document.getElementById(id);

    if(category.classList.contains('open_category')){
        category.classList.remove('open_category');
        category.classList.add('close_category');
    }else{
        category.classList.remove('close_category');
        category.classList.add('open_category');
    }
}

